{
  "name": "express-server-architecture-boilerplate",
  "version": "1.0.0",
  "description": "A simple express server boilerplate built with TypeScript & nodejs.",
  "keywords": [
    "express",
    "typescript",
    "template",
    "mongoose",
    "mongodb",
    "server"
  ],
  "main": "./build/index.js",
  "scripts": {
    "document": "typedoc --out ./documentation ./src",
    "watch": "nodemon --exec ts-node -r tsconfig-paths/register --files ./src/index.ts",
    "lint": "eslint ./",
    "build": "webpack build --config webpack.config.js",
    "start": "node ./build/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaschahuisman/express-server-architecture-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jaschahuisman/express-server-architecture-boilerplate/issues"
  },
  "homepage": "https://github.com/jaschahuisman/express-server-architecture-boilerplate#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "webpack": "^5.47.1",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.13.5"
  }
}
